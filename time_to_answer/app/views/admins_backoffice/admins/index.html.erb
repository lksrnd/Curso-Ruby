<div class="row">
    <div class=" .col-lg-6">
        <h1 class="page-header">Listando Administradores</h1>
          <hr class="with-border">
    </div>
    <!-- /.col-lg-6 -->
</div>

<div class="table-responsive">
<table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Email</th>
                <th><%= link_to new_admins_backoffice_admin_path, class:"btn btn-success btn-circle" do %>
                <i class="fas fa-plus "></i>
                </th>
                <% end %>
            </tr>
        </thead>
        <tbody>
        <% @admins.each do |admin| %>
            <tr>
              <td><%= admin.id %></td>
              <td><%= admin.email %></td>
              <td width="110px">
              <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-info btn-circle" do %>
                <i class="fas fa-edit "></i>
              <% end %>
              <%= link_to admins_backoffice_admin_path(admin), method: :delete, class:"btn btn-danger btn-circle", data:{confirm: "Deseja realmente excluir esse administrador?"} do %>
                <i class="fas fa-trash "></i>
              <% end %>
            </tr>
            <% end %>
        </tbody>
    </table>
    <div class="text-center">
      <%= paginate @admins %>
    </div> 
</div>

    