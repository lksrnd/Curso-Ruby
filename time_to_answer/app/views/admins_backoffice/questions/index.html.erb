<div class="row">
    <div class=" col-lg-6">
        <h1 class="page-header">Listando Questões</h1>
          <hr class="with-border">
    </div>
    <!-- /.col-lg-6 -->
</div>

<div class="table-responsive">
<table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th><%= translate_attribute(@questions, :description) %></th>
                <th><%= translate_attribute(@questions, :subject) %></th>
                <th><%= link_to new_admins_backoffice_question_path, class:"btn btn-success btn-circle" do %>
                  <i class="fas fa-plus "></i>  
                <% end %>    
            </tr>
        </thead>
        <tbody>
        <% @questions.each do |question| %>
            <tr>
              <td><%= question.id %></td>
              <td><%= question.description.truncate(50) %></td>
              <td><%= question.subject.description.truncate(30) %></td>
              <td width="110px">
              </th> 
              <%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-info btn-circle" do %>
                <i class="fas fa-edit "></i>
              <% end %>
              <%= link_to admins_backoffice_question_path(question), method: :delete, class:"btn btn-danger btn-circle", data:{confirm: "Deseja realmente excluir essa questão?"} do %>
                <i class="fas fa-trash "></i>
              <% end %>
            </tr>
            <% end %>
        </tbody>
    </table>
    <div class="text-center">
      <%= paginate @questions %>
    </div> 
</div>

    