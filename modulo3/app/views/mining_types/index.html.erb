<p id="notice"><%= notice %></p>

<h1><%= @mining_types.model_name.human(count: @mining_types.length)%></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= @mining_types.human_attribute_name(:description) %></th>
      <th><%= @mining_types.human_attribute_name(:acronym) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to t('links.show'), mining_type, class: "btn btn-outline-primary" %></td>
        <td><%= link_to t('links.edit'), edit_mining_type_path(mining_type), class: "btn btn-outline-secondary" %></td>
        <td><%= link_to t('links.delete'), mining_type, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('new.mining_type'), new_mining_type_path, class:"btn btn-outline-success" %>
